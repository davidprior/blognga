<div class="container">
  <div id="post" class="bg-warning"> 
      <div class="row">
         <div class="col-lg-10 col-lg-offset-1">
           <h2><%= link_to_unless_current post.title, post, :class => "title"%> </h2> 
           <%= simple_format post.body %>
          <p>
            <strong class="small"><%= post.publication_date %></strong>
            
          </p>
        <h4>Comments</h4>
        <div id="comments">
             <%= render :partial => post.comments %>
        </div>
        <%= form_for [post, Comment.new] do |f| %>
                <p>
        			  <div class="field">
        			    <%= f.label :author, "Author"%><br>
        			    <%= f.text_field :author %>
        			  </div>
        			  <div class="field">
        			    <%= f.label :body, "Comment description"%><br>
        			    <%= f.text_area :body %>
        			  </div>
                </p>
                <p><%= f.submit "Add comment", :class => "btn btn-warning btn-sm" %></p>
        <% end %>
      </div>  
    </div>  
  </div>  
</div>  
<hr class="small">