<div class="bg-primary">
	<div class="row">
    	<div class="col-lg-12 col-lg-offset-1">
			<h1>NGABlog listing posts</h1>
		</div>
	</div>
</div>
<div class="bg-info fill">
	<div class="row">
		<p id="notice"><%= notice %></p>		
    	<div class="col-lg-8 col-lg-offset-1">
    		<div>
			<%= link_to 'Edit', edit_post_path(@post), :class => "btn btn-info btn-sm" %> 
			<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %> 
			<%= link_to 'Back', posts_path, :class => "btn btn-default btn-sm" %>
			</div>
			<br>
			<%= render :partial => @post %>
		</div>
	</div>
</div>

